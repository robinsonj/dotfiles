[include]
	path = ~/.dotfiles/.gitsecrets

[core]
	editor = "subl -n -w"
	excludesfile = ~/.gitignore

[push]
	default = matching

[color]
	ui = true

[color "branch"]
	current = blue bold
	local   = white bold
	remote  = red bold

[color "diff"]

[color "status"]
	header    = black bold
	added     = green bold
	changed   = red bold
	untracked = blue bold
	deleted   = white bold

[alias]
	sc   = !git config -l | grep alias | cut -c 7-

	st   = status -sb -uall
	sti  = status -sb -uall --ignored

	r    = reset
	r1   = reset HEAD^
	r2   = reset HEAD^^
	rh   = reset --hard
	rh1  = reset HEAD^ --hard
	rh2  = reset HEAD^^ --hard

	a    = add
	ap   = add --patch
	aa   = add .

	d    = diff --word-diff --color-words
	ds   = !git d --cached
	df   = diff

	rmr  = rm -r
	rmrf = rm -rf

	c    = commit
	cm   = commit -m
	ca   = commit --amend
	cma  = commit --amend -m
	cam  = !git cma

	cl   = clone
	co   = checkout

	br-v = branch
	br   = branch -v

	sl   = stash list
	sa   = stash apply
	ss   = stash save

	lg   = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d%Creset %s %C(reset)%C(red)[%cn]%Creset' --color --decorate=short --date=short --abbrev-commit --graph
	lga  = !git lg --all
	ls   = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d% C(red)[%cn]%Creset%n%C(bold)%s%Creset%n%+b' --color --decorate=short
	lsv  = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d% C(red)[%cn]%Creset%n%C(bold)%s%Creset%n%+b' --color --decorate=short --stat

	# follow up
	fup  = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d% C(red)[%cn]%Creset%n%C(bold)%s%Creset%n%+b' --color --decorate=short --since '2 days ago'
	fupv = !git fup --stat

	# Toggle ignoring changes to tracked files. Used for temporary
	# modifications that do not need to be committed.
	sic  = update-index --assume-unchanged
	nic  = update-index --no-assume-unchanged
	lic  = !git ls-files -v | grep ^h | cut -c 3-
