[include]
	path = ~/.config/git/secrets

[core]
	excludesfile = ~/.config/git/ignore
	editor = nvim

[push]
	default = upstream

[color]
	ui = true

[diff]
	indentHeuristic = on

[color "branch"]
	current    = blue bold
	local      = black
	remote     = red bold

[color "diff"]
	plain      = normal
	meta       = black bold
	frag       = cyan
	func       = normal
	old        = red bold
	new        = green bold
	commit     = yellow
	whitespace = magenta reverse

[color "status"]
	header     = black bold
	added      = green bold
	changed    = red bold
	untracked  = blue bold
	branch     = cyan bold
	nobranch   = yellow bold

[alias]
	sc   = !git config -l | grep alias | cut -c 7-
	f    = grep -Iin --full-name --break --show-function

	st   = status -sb -uall
	sti  = status -sb -uall --ignored

	r    = reset
	r1   = reset HEAD^
	r2   = reset HEAD^^
	rh   = reset --hard
	rh1  = reset HEAD^ --hard
	rh2  = reset HEAD^^ --hard

	a    = add
	ap   = add --patch
	aa   = add .
	af   = add --force
	aaf  = add . --force

	d    = diff --word-diff --color-words
	ds   = !git d --cached
	df   = diff

	rmr  = rm -r
	rmrf = rm -rf

	c    = commit
	cm   = commit -m
	ca   = commit --amend
	cma  = commit --amend -m
	cam  = !git cma

	cl   = clone
	co   = checkout

	br   = branch
	brv  = branch -vv
	bra  = branch -a
	brav = branch -avv

	sl   = stash list
	sa   = stash apply
	ss   = stash save

	np   = log --stat origin/master..HEAD

	lg   = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d%Creset %s %C(reset)%C(red)[%an - %cn]%Creset' --color --decorate=short --date=short --abbrev-commit --graph
	lga  = !git lg --all
	ls   = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d% C(red)[%cn]%Creset%n%C(bold)%s%Creset%n%+b' --color --decorate=short
	lsv  = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d% C(red)[%cn]%Creset%n%C(bold)%s%Creset%n%+b' --color --decorate=short --stat

	# follow up
	fup  = log --pretty=format:'%C(yellow)%h %C(blue)%ad%C(green)%d% C(red)[%cn]%Creset%n%C(bold)%s%Creset%n%+b' --color --decorate=short --since '2 days ago'
	fupv = !git fup --stat

	# Toggle ignoring changes to tracked files. Used for temporary
	# modifications that do not need to be committed.
	sic  = update-index --assume-unchanged
	nic  = update-index --no-assume-unchanged
	lic  = !git ls-files -v | grep ^h | cut -c 3-
